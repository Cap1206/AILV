{
  "compilerOptions": {
    /* 基本設定 */
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    /* Node.js + Express で便利な設定 */
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server.ts"]
}